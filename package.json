{
  "name": "obibok",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/and-end/obibok"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint --parallel",
    "lint-dry": "lerna run lint-dry --parallel",
    "format": "lerna run format --parallel",
    "format-dry": "lerna run format-dry --parallel",
    "semantic-release": "semantic-release",
    "test": "lerna run test --parallel",
    "test-publish-coverage": "codecov",
    "predeploy": "git checkout continuous-integration/travis-ci && git pull origin develop --rebase",
    "deploy": "git push origin continuous-integration/travis-ci",
    "postdeploy": "git checkout -"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "./packages/**/*.{ts,js}": [
        "npm run lint",
        "npm run format",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/**",
      "**/node_modules/**"
    ]
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ],
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "./docs/CHANGELOG.md"
        ],
        "branch": "release/${nextRelease.version}",
        "message": "chore(release): ${nextRelease.version} [skip ci]nn${nextRelease.notes}"
      }
    ],
    "branch": "continuous-integration/travis-ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "@commitlint/config-angular-type-enum": "^8.0.0",
    "@commitlint/prompt": "^8.0.0",
    "@commitlint/prompt-cli": "^8.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "github:semantic-release/commit-analyzer",
    "@semantic-release/git": "^7.0.12",
    "@semantic-release/npm": "^5.1.9",
    "@semantic-release/release-notes-generator": "^7.2.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "@typescript-eslint/eslint-plugin-tslint": "^1.10.2",
    "codecov": "^3.5.0",
    "convict": "^5.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-dom": "^3.5.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.16",
    "svelte": "^3.5.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "version": "1.4.0",
  "dependencies": {
    "colors": "^1.3.3",
    "lodash": "^4.17.11"
  }
}
