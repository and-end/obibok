{
  "name": "obibok",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/and-end/obibok"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "lerna run lint --stream",
    "lint-dry": "lerna run lint-dry --stream",
    "format": "lerna run format --stream",
    "format-dry": "lerna run format-dry --stream",
    "semantic-release": "semantic-release",
    "test": "echo \"Travis test\"",
    "predeploy": "git checkout continuous-integration/travis-ci && git pull origin develop --rebase",
    "deploy": "git push origin continuous-integration/travis-ci",
    "postdeploy": "git checkout -"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "./docs/CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]nn${nextRelease.notes}"
      }
    ],
    "branch": "continuous-integration/travis-ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "@commitlint/config-angular-type-enum": "^8.0.0",
    "@commitlint/prompt": "^8.0.0",
    "@commitlint/prompt-cli": "^8.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.12",
    "@semantic-release/npm": "^5.1.9",
    "@types/node": "^12.0.8",
    "@typescript-eslint/eslint-plugin-tslint": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.16",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "version": "1.0.1"
}
